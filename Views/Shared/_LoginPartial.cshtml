@*@inject UserManager<IdentityUser> UserManager*@

<ul class="navbar-nav" style="margin-right:0px" >
@if (!string.IsNullOrEmpty(Context.Session.GetString("username")))
{
        <li class="nav-item">
            <span id="manage" class="nav-link text-dark">
                @Context.Session.GetString("username")
            </span>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Users" asp-action="Logout">Logout</a>
        </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark"  asp-controller="Users" asp-action="Login">Login</a>
    </li>
}
</ul>
