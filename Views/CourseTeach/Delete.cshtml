@model ProjectDB.Models.CourseTeach

@{
    ViewData["Title"] = "Delete";
}

<h4>Delete Course Teach</h4>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.course!.title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.instructor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.instructor!.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.topic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.topic)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.book)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input hidden name="course_id" value="@Model.course!.course_Id" />
        <input hidden name="inst_id" value="@Model.instructor!.inst_id" />
        <input hidden asp-for="topic" class="form-control" />
        <input hidden asp-for="book" class="form-control" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary my-2">Back to List</a>
    </form>
</div>
