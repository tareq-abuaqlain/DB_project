@model IEnumerable<ProjectDB.Models.Div>

@{
    ViewData["Title"] = "IndexByUser";
}

<h1>Divs</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.div_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.course!.course_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instructor!.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Divs" asp-action="IndexStudentByDiv" asp-route-div_id="@item.div_id" class="btn btn-primary">@item.div_id</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course!.course_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.instructor!.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room)
            </td>
            <td>
                @{
                    DayOfWeek day = (DayOfWeek) item.day;
                }
                @Html.DisplayFor(modelItem => day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
                <td>
                    <!--
                    <a asp-controller="Regestration" asp-action="Index" asp-route-div_id="@item.div_id" asp-route-course_id="@item.course!.course_Id" class="btn btn-primary my-2"> View Student</a> <br /> -->
                    <a asp-controller="Regestration" asp-action="Create" asp-route-div_id="@item.div_id" asp-route-course_id="@item.course!.course_Id" class="btn btn-primary my-2"> Add Student</a> <br />
                    <a asp-controller="Lectures" asp-action="Index" asp-route-div_id="@item.div_id" class="btn btn-primary my-2"> View Lectures</a> <br />
                    <a asp-controller="Lectures" asp-action="Create" asp-route-div_id="@item.div_id" class="btn btn-primary my-2"> Add Lecture</a> <br />
                </td>

        </tr>
}
    </tbody>
</table>
