@model ProjectDB.Models.Instructor

@{
    ViewData["Title"] = "Edit";
    SelectList? list = ViewData["List"] as SelectList;
}


<h4>Edit Instructor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="inst_id" name="inst_id" class="form-control" />
            <div class="form-group">
                <label asp-for="inst_id" class="control-label"></label>
                <input readonly asp-for="inst_id" class="form-control" />
                <span asp-validation-for="inst_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="department" class="control-label"></label>
                <select asp-items="list" name="dept_name" class="form-control"></select>
                @*                <span asp-validation-for="department" class="text-danger"></span>
                *@
            </div>
            <div class="form-group">
                <label asp-for="salary" class="control-label"></label>
                <input asp-for="salary" class="form-control" />
                <span asp-validation-for="salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary my-2">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
