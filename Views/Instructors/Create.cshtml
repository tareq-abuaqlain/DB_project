@model ProjectDB.Models.Instructor

@{
    ViewData["Title"] = "Create";
    SelectList? list = ViewData["List"] as SelectList;
}

<h4> Create Instructor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="Inst_Id" class="control-label"></label>
                <input asp-for="Inst_Id" class="form-control" />
                <span asp-validation-for="Inst_Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="department" class="control-label"></label>
                <select asp-items="list" name="dept_name" class="form-control" ></select>
@*                <span asp-validation-for="department" class="text-danger"></span>
*@            </div>

            <div class="form-group">
                <label asp-for="salary" class="control-label"></label>
                <input asp-for="salary" class="form-control" data-val-range="Salary cannot be below 29000." data-val-range-min="29000" />
                <span asp-validation-for="salary" class="text-danger"></span>
            </div>
            @if (ViewData.ModelState.ContainsKey("salary"))
            {
                <span class="text-danger">@ViewData.ModelState["salary"].Errors.FirstOrDefault()?.ErrorMessage</span>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary my-2">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
